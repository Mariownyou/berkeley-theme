{
    "name": "Berkley Light",
    "vars": {
        "blue": "#4B83CD",
        "cyan": "#00708C",

        "sidebar": "#E6E6E6",
        "statusBar": "#D1D1D1",
        "statusBarFg": "#4D4D4D",
        "activeSelection": "#F3F3F3",
    },
    "colors": {
        "editor.background": "#fff",
        "editor.foreground": "#1F2328",
        "scrollbar.shadow": "#ffffff00",

        "statusBarItem.remoteBackground": "statusBar",
        "statusBarItem.remoteForeground": "statusBarFg",

        "sideBar.background": "sidebar",
        "sideBar.foreground": "#000",
        "sideBarSectionHeader.background": "sidebar",
        "list.inactiveSelectionBackground": "activeSelection",
        "list.activeSelectionBackground": "activeSelection",
        "list.activeSelectionForeground": "#000",
        "list.focusOutline": "#ffffff00",
        "list.hoverBackground": "#EEEEEE",
        "tab.activeBorder": "#fff",

        "activityBar.background": "#000", // @TODO
        "statusBar.background": "statusBar",
        "statusBar.foreground": "statusBarFg",
        "titleBar.activeBackground": "sidebar",
        "titleBar.inactiveBackground": "sidebar",

        "editorGroupHeader.tabsBorder": "#00000000",
		"editorGroupHeader.tabsBackground": "sidebar",
		"tab.inactiveBackground": "sidebar",
		"tab.border": "sidebar",

        // editor
        "editorLineNumber.foreground": "#D0D3D6",
        "editorLineNumber.activeForeground": "#1F2328",
        "editor.lineHighlightBackground": "#F4F6F8",

        // git

        // selection and search

        // command palette
        "quickInput.background": "sidebar",
        "quickInput.foreground": "#333333",
        "quickInputList.focusBackground": "#EFEFEF",
        "focusBorder": "#00000000",

        // terminal panel
        "panelSectionHeader.background": "#00000000",
        "panel.border": "statusBar",

        // split view
        "editorGroup.border": "sidebar",
        // brackets
        "editorBracketHighlight.foreground1": "#1F2328",
    },
    "tokenColors": [
        {
			"name": "Keywords",
			"scope": [
				"keyword",
				"storage",
				"meta.tag",
			],
			"settings": {
				"foreground": "blue"
			}
		},

        {
            "name": "Strings",
            "scope": [
                "string",
            ],
            "settings": {
                "foreground": "#2A8C00"
            }
        },

        {
            "name": "Consts",
            "scope": [
                "constant",
                "number"
            ],
            "settings": {
                "foreground": "#62008C"
            }
        },

        {
            "name": "Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#8C1C00",
            }
        },

        {
            "name": "Overrides",
            "scope": [
                "keyword.operator",
				"keyword.other.this",
                "meta.function-call entity.name.function",
				"meta.method-call entity.name.function",
				"entity.name.function.decorator",
                "support.type.property-name.json",
				"entity.other.attribute-name",
                "constant.other.caps"
            ],
            "settings": {
                "foreground": "#605a52"
            }
        },

        // Markdown
        { "scope": "markup.italic", "settings": { "fontStyle": "italic" } },
        { "scope": [ "meta.link", "markup.underline.link" ], "settings": { "foreground": "blue" } },
        { "scope": [ "string.other.link.title.markdown", "string.other.link.description.markdown" ], "settings": { "foreground": "#605a52" } },
        { "scope": "markup.heading", "settings": { "foreground": "blue" } },
        { "scope": "markup.bold", "settings": { "fontStyle": "bold" } },
        { "scope": "markup.underline", "settings": { "fontStyle": "underline" } },
        { "scope": "markup.quote", "settings": { "foreground": "#62008C" } },
        { "scope": "markup.inline.raw", "settings": { "fontStyle": "", "foreground": "#8C1C00" } }
    ]
}
